<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dialog_show_user_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:paddingTop="10dp"
            android:text="@string/dialog_show_user_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/dialog_show_user_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_show_user_title"
            android:layout_marginStart="10dp"
            android:paddingTop="20dp"
            android:text="@string/dialog_show_user_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/dialog_show_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_show_user_title"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/dialog_show_user_name_title"
            android:paddingTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/dialog_show_user_email_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_show_user_name_title"
            android:layout_marginStart="10dp"
            android:paddingTop="20dp"
            android:text="@string/dialog_show_user_email"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/dialog_show_user_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_show_user_name"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/dialog_show_user_email_title"
            android:paddingTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/dialog_show_user_id_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_show_user_email_title"
            android:layout_marginStart="10dp"
            android:paddingTop="20dp"
            android:text="@string/dialog_show_user_unique_id"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

        <TextView
            android:id="@+id/dialog_show_user_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dialog_show_user_email"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/dialog_show_user_id_title"
            android:paddingTop="20dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>